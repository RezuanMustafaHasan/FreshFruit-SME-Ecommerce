<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orders - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <!-- Sidebar -->
    <%- include('includes/sidebar.ejs') %>
    <!-- Main Content -->
    <div class="main-content">
        <!-- Top Navigation -->
        <%- include('includes/navbar.ejs') %>
        <div class="content-area">
            <!-- Pending Orders Section -->
            <div class="products-list-card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-clock text-warning"></i> Pending Orders</h5>
                    <span class="badge bg-warning"><%= pendingOrders.length %> Orders</span>
                </div>
                <div class="card-body">
                    <% if (pendingOrders.length === 0) { %>
                        <div class="text-center py-4">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No pending orders found</p>
                        </div>
                    <% } else { %>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Customer</th>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Unit Price</th>
                                        <th>Total</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% pendingOrders.forEach((order, index) => { %>
                                        <tr>
                                            <td><span class="badge bg-secondary">#<%= order._id.toString().slice(-6).toUpperCase() %></span></td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-user-circle fa-lg text-primary me-2"></i>
                                                    <span><%= order.user ? order.user.username : 'Unknown User' %></span>
                                                </div>
                                            </td>
                                            <td>
                                                <% if (order.product) { %>
                                                    <div class="d-flex align-items-center">
                                                        <% if (order.product.image && order.product.image.url) { %>
                                                            <img src="<%= order.product.image.url %>" alt="<%= order.product.name %>" 
                                                                 class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                                        <% } else { %>
                                                            <div class="bg-light rounded me-2 d-flex align-items-center justify-content-center" 
                                                                 style="width: 40px; height: 40px;">
                                                                <i class="fas fa-image text-muted"></i>
                                                            </div>
                                                        <% } %>
                                                        <div>
                                                            <div class="fw-semibold"><%= order.product.name || 'Unknown Product' %></div>
                                                            <small class="text-muted"><%= order.product.category || 'No Category' %></small>
                                                        </div>
                                                    </div>
                                                <% } else { %>
                                                    <div class="d-flex align-items-center">
                                                        <div class="bg-danger rounded me-2 d-flex align-items-center justify-content-center" 
                                                             style="width: 40px; height: 40px;">
                                                            <i class="fas fa-exclamation-triangle text-white"></i>
                                                        </div>
                                                        <div>
                                                            <div class="fw-semibold text-danger">Product Deleted</div>
                                                            <small class="text-muted">Product no longer exists</small>
                                                        </div>
                                                    </div>
                                                <% } %>
                                            </td>
                                            <td><span class="badge bg-info"><%= order.quantity %></span></td>
                                            <td>
                                                <% if (order.product && order.product.price) { %>
                                                    &#2547;<%= order.product.price.toFixed(2) %>
                                                <% } else { %>
                                                    <span class="text-muted">N/A</span>
                                                <% } %>
                                            </td>
                                            <td class="fw-bold text-success">
                                                <% if (order.product && order.product.price) { %>
                                                    &#2547;<%= (order.product.price * order.quantity).toFixed(2) %>
                                                <% } else { %>
                                                    <span class="text-muted">N/A</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (order.product) { %>
                                                    <form action="/admin/orders/deliver/<%= order._id %>" method="POST" class="d-inline">
                                                        <button type="submit" class="btn btn-success btn-sm" 
                                                                onclick="return confirm('Mark this order as delivered?')">
                                                            <i class="fas fa-truck"></i> Deliver
                                                        </button>
                                                    </form>
                                                <% } else { %>
                                                    <button class="btn btn-danger btn-sm" disabled>
                                                        <i class="fas fa-times"></i> Invalid
                                                    </button>
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Delivered Orders Section -->
            <div class="products-list-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-check-circle text-success"></i> Delivered Orders</h5>
                    <div>
                        <span class="badge bg-success me-2"><%= deliveredOrders.length %> Orders</span>
                        <span class="badge bg-primary">Total Sales: &#2547;<%= totalSales.toFixed(2) %></span>
                    </div>
                </div>
                <div class="card-body">
                    <% if (deliveredOrders.length === 0) { %>
                        <div class="text-center py-4">
                            <i class="fas fa-truck fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No delivered orders found</p>
                        </div>
                    <% } else { %>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Customer</th>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Unit Price</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% deliveredOrders.forEach((order, index) => { %>
                                        <tr>
                                            <td><span class="badge bg-secondary">#<%= order._id.toString().slice(-6).toUpperCase() %></span></td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-user-circle fa-lg text-primary me-2"></i>
                                                    <span><%= order.user ? order.user.username : 'Unknown User' %></span>
                                                </div>
                                            </td>
                                            <td>
                                                <% if (order.product) { %>
                                                    <div class="d-flex align-items-center">
                                                        <% if (order.product.image && order.product.image.url) { %>
                                                            <img src="<%= order.product.image.url %>" alt="<%= order.product.name %>" 
                                                                 class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                                        <% } else { %>
                                                            <div class="bg-light rounded me-2 d-flex align-items-center justify-content-center" 
                                                                 style="width: 40px; height: 40px;">
                                                                <i class="fas fa-image text-muted"></i>
                                                            </div>
                                                        <% } %>
                                                        <div>
                                                            <div class="fw-semibold"><%= order.product.name || 'Unknown Product' %></div>
                                                            <small class="text-muted"><%= order.product.category || 'No Category' %></small>
                                                        </div>
                                                    </div>
                                                <% } else { %>
                                                    <div class="d-flex align-items-center">
                                                        <div class="bg-danger rounded me-2 d-flex align-items-center justify-content-center" 
                                                             style="width: 40px; height: 40px;">
                                                            <i class="fas fa-exclamation-triangle text-white"></i>
                                                        </div>
                                                        <div>
                                                            <div class="fw-semibold text-danger">Product Deleted</div>
                                                            <small class="text-muted">Product no longer exists</small>
                                                        </div>
                                                    </div>
                                                <% } %>
                                            </td>
                                            <td><span class="badge bg-info"><%= order.quantity %></span></td>
                                            <td>
                                                <% if (order.product && order.product.price) { %>
                                                    &#2547;<%= order.product.price.toFixed(2) %>
                                                <% } else { %>
                                                    <span class="text-muted">N/A</span>
                                                <% } %>
                                            </td>
                                            <td class="fw-bold text-success">
                                                <% if (order.product && order.product.price) { %>
                                                    &#2547;<%= (order.product.price * order.quantity).toFixed(2) %>
                                                <% } else { %>
                                                    <span class="text-muted">N/A</span>
                                                <% } %>
                                            </td>
                                            <td><span class="badge bg-success"><i class="fas fa-check"></i> Delivered</span></td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>