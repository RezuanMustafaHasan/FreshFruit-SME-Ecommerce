<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
</head>
<body>
    <%- include('partials/nav') %>
    
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-overlay">
            <div class="container">
                <div class="row align-items-center min-vh-100">
                    <div class="col-lg-6">
                        <div class="hero-content text-white">
                            <h1 class="display-2 fw-bold mb-4 animate-fade-in">
                                Fresh <span class="text-warning">Fruits</span><br>
                                Delivered Daily
                            </h1>
                            <p class="lead mb-4 fs-5">Farm-fresh, organic fruits delivered straight to your doorstep. Taste the difference quality makes!</p>
                            <div class="d-flex gap-3 flex-wrap">
                                <button class="btn btn-warning btn-lg px-4 py-3 rounded-pill shadow-lg">
                                    <i class="fas fa-shopping-bag me-2"></i>Shop Now
                                </button>
                                <button class="btn btn-outline-light btn-lg px-4 py-3 rounded-pill">
                                    <i class="fas fa-play me-2"></i>Watch Video
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="hero-image text-center">
                            <div class="floating-fruits">
                                <div class="fruit-float fruit-1">üçé</div>
                                <div class="fruit-float fruit-2">üçä</div>
                                <div class="fruit-float fruit-3">üçå</div>
                                <div class="fruit-float fruit-4">üçì</div>
                                <div class="fruit-float fruit-5">üçá</div>
                                <!-- <div class="fruit-float fruit-6">ü•≠</div> -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-4 mb-4">
                    <div class="feature-card p-4">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-truck text-success fs-1"></i>
                        </div>
                        <h5>Free Delivery</h5>
                        <p class="text-muted">Free delivery on orders over &#2547;50</p>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="feature-card p-4">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-leaf text-success fs-1"></i>
                        </div>
                        <h5>100% Organic</h5>
                        <p class="text-muted">Certified organic and pesticide-free</p>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="feature-card p-4">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-clock text-success fs-1"></i>
                        </div>
                        <h5>Fresh Daily</h5>
                        <p class="text-muted">Harvested and delivered within 24 hours</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Products Section -->
    <section class="py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold mb-3">Featured <span class="text-success">Fruits</span></h2>
                <p class="lead text-muted">Handpicked selection of the finest fruits</p>
            </div>
            <div class="row">
                <% if (featuredProducts && featuredProducts.length > 0) { %>
                    <% featuredProducts.forEach(product => { %>
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="product-card card border-0 shadow-sm h-100">
                                <div class="product-image-wrapper">
                                    <img src="<%= product.image && product.image.url ? product.image.url : '/images/default-product.jpg' %>" class="card-img-top product-image" alt="<%= product.name %>">
                                    <div class="product-overlay">
                                        <button class="btn btn-light rounded-circle quick-view-btn">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="card-body text-center p-4">
                                    <h5 class="card-title fw-bold mb-2"><%= product.name %></h5>
                                    <div class="rating mb-2">
                                        <i class="fas fa-star text-warning"></i>
                                        <i class="fas fa-star text-warning"></i>
                                        <i class="fas fa-star text-warning"></i>
                                        <i class="fas fa-star text-warning"></i>
                                        <i class="fas fa-star text-warning"></i>
                                        <span class="text-muted ms-1">(4.8)</span>
                                    </div>
                                    <p class="price text-success fs-3 fw-bold mb-3">&#2547;<%= product.price %>/<%=product.unit%></product.unit></p>
                                    <% if (product.stock > 0) { %>
                                        <a href="/cart/add/<%= product._id %>" class="btn btn-success btn-lg w-100 rounded-pill add-to-cart-btn">
                                            <i class="fas fa-cart-plus me-2"></i>Add to Cart
                                        </a>
                                    <% } else { %>
                                        <button class="btn btn-secondary btn-lg w-100 rounded-pill" disabled>
                                            <i class="fas fa-times me-2"></i>Out of Stock
                                        </button>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="col-12 text-center">
                        <p class="text-muted">No featured products available at the moment.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </section> 

   
    

    <%- include('partials/footer') %>
</body>
</html>